      <div class="card">
        <div class="card-header">
          <%= render 'navigation_for_login_or_registration', sign_in: local_assigns[:sign_in] %>
        </div>
        <div class="card-body">
          <div class="tab-content" id="tabSignRegisterContent">
            <div class="tab-pane fade<%= " show active" if local_assigns[:sign_in] %>" id="sign-in" role="tabpanel">
              <%= render 'devise/sessions/form' %>
            </div>
            <div class="tab-pane fade<%= " show active" if !local_assigns[:sign_in] %>" id="register" role="tabpanel">
              <%= render 'devise/registrations/form' %>
            </div>
          </div>
        </div>
      </div>
